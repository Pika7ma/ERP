<Window x:Class="ERP.UI.Bom.DeleteProductClass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="删除产品种类" Height="300" Width="500">
    <Grid>
        <CheckBox x:Name="ckbDeleteSubClass" Content="删除子种类" HorizontalAlignment="Left" Margin="54,42,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <ComboBox x:Name="cbTransferTo" Margin="218,57,127.6,0" VerticalAlignment="Top" DisplayMemberPath="Name" SelectedValuePath="Id"/>
        <Button x:Name="btnOK" Content="确定" HorizontalAlignment="Left" Margin="114,226,0,0" VerticalAlignment="Top" Width="75" Click="BtnOK"/>
        <TextBlock x:Name="txtMsg" HorizontalAlignment="Left" Margin="54,63,0,0" TextWrapping="Wrap" Text="将零件(/子种类)转移到" VerticalAlignment="Top" Width="214"/>
        <RadioButton x:Name="Radio1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,49,0,0" GroupName="Gender"/>
        <RadioButton x:Name="Radio2" Content="删除所有子分类,删除产品"  HorizontalAlignment="Left" Margin="28,122,0,0" VerticalAlignment="Top" GroupName="Gender"/>
        <RadioButton x:Name="Radio3" Content="删除所有子分类,将产品标记为停产,移动到停产分类" HorizontalAlignment="Left" Margin="28,183,0,0" VerticalAlignment="Top" GroupName="Gender"/>
        <Button x:Name="btnCancel" Content="取消" HorizontalAlignment="Left" Margin="307,226,0,0" VerticalAlignment="Top" Width="75" Click="BtnCancel"/>
    </Grid>
</Window>

<Window x:Class="Lplfw.UI.Purchase.ShowPurchaseQuality"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lplfw.UI.Purchase"
        mc:Ignorable="d"
        Title="质检结果" Height="450" Width="550">
    <Grid>
        <DataGrid x:Name="dgQuality" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0,0,0.2,-0.4">
            <DataGrid.Columns>
                <DataGridTextColumn Header="质检单ID" Width ="100" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="订单Id" Width ="100" Binding="{Binding mName}"/>
                <DataGridTextColumn Header="负责人" Width ="70" Binding="{Binding Price}"/>
                <DataGridTextColumn Header="结果" Width ="70" Binding="{Binding sName}"/>
                <DataGridTextColumn Header="描述" Width ="70" Binding="{Binding Quantity}"/>
                <DataGridTextColumn Header="时间" Width ="100" Binding="{Binding Status}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>

<Window x:Class="Lplfw.UI.Order.NewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lplfw.UI.Order"
        mc:Ignorable="d"
        Height="620" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="185"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="40"/>
        </Grid.ColumnDefinitions>
        <Label Content="*订单号" Grid.Column="2" Margin="0,0,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="*客户" Grid.Column="2" Margin="0,30,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="*联系方式" Grid.Column="2" Margin="0,60,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="*优先级" Grid.Column="2" Margin="0,90,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="*应付时间" Grid.Column="2" Margin="0,120,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <Label Content="备注" Grid.Column="2" Margin="0,150,20,0" Grid.Row="1" VerticalAlignment="Top" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="txtCode" Grid.Column="3" Height="23" Margin="0,0,0,0" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtCustomer" Grid.Column="3" Height="23" Margin="0,30,0,0" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTel" Grid.Column="3" Height="23" Margin="0,60,0,0" Grid.Row="1" TextWrapping="NoWrap" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbPriority" Grid.Column="3" Grid.Row="1" Margin="0,90,0,0" VerticalAlignment="Top" DisplayMemberPath="Name" SelectedValuePath="Name"/>
        <DatePicker x:Name="dpDueTime" Grid.Column="3" Margin="0,120,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDescription" Grid.Column="3" Height="23" Margin="0,150,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <DataGrid x:Name="dgSalesItems" Grid.Column="1" HorizontalAlignment="Left" Grid.Row="3" Width="564" Grid.ColumnSpan="3" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" Margin="0,0,0,5">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="品名" Width="150">
                    <DataGridComboBoxColumn.ElementStyle>
                        <Style TargetType="ComboBox">
                            <Setter Property="ItemsSource" Value="{Binding Path=DataContext.Products,ElementName=dgSalesItems}" />
                            <Setter Property="DisplayMemberPath" Value="Name" />
                            <Setter Property="SelectedValuePath" Value="Id" />
                            <Setter Property="SelectedValue" Value="{Binding ProductId}" />
                        </Style>
                    </DataGridComboBoxColumn.ElementStyle>
                </DataGridComboBoxColumn>
                <DataGridTextColumn Header="数量" Binding="{Binding Quantity}" Width="150"/>
                <DataGridTextColumn Header="单价" Binding="{Binding Price}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="新建订单条目" Grid.Column="4" HorizontalAlignment="Left" Margin="60,30,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90" Click="NewSalesItem"/>
        <Button Content="修改订单条目" Grid.Column="4" HorizontalAlignment="Left" Margin="60,70,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90" Click="EditSalesItem"/>
        <Button Content="删除订单条目" Grid.Column="4" HorizontalAlignment="Left" Margin="60,110,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90" Click="DeleteSalesItem"/>
        <Button Content="确定" Grid.Column="4" HorizontalAlignment="Left" Margin="60,190,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90" Click="Confirm"/>
        <Button Content="取消" Grid.Column="4" HorizontalAlignment="Left" Margin="60,230,0,0" Grid.Row="3" VerticalAlignment="Top" Width="90" Click="Cancel"/>
        <TextBlock x:Name="txtMessage" Grid.Column="3" Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,6,0,0" TextAlignment="Center" Foreground="Red"/>
    </Grid>
</Window>
